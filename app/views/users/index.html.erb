<h1>users index</h1>

<table>
  <thead>
    <tr>
      <th>User nickname</th>
      <th>User email</th>
      <th>User description</th>
      <th>Follower</th>
      <th>Followed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user.each do |user| %>
      <tr>
        <td>
          <%= link_to "#{user.nickname}", user_path(user) %>
        </td>
        <td><%= user.email %></td>
        <td><%= user.description %></td>
        <td><%= user.following.count %></td>
        <td><%= user.followers.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>

