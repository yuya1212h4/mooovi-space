<p id="notice"><%= notice %></p>

<h1>users search</h1>

<%= form_tag('/users/search', method: :get) do %>
  <%= text_field_tag :search, "", placeholder: "ユーザー名で検索" %>
  <p></p>
  <%= submit_tag "検索" %>
<% end %>

<table>
  <thead>
    <tr>
      <th>User nickname</th>
      <th>User email</th>
      <th>User description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user.each do |user| %>
      <tr>
        <td><%= user.nickname %></td>
        <td><%= user.email %></td>
        <td><%= user.description %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
