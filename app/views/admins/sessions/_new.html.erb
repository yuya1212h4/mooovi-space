<% @admin = Admin.new %>

<h2>Admin Log in</h2>

<%= form_for(@admin, url: admin_session_path, method: "post") do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>


    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>

  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
<% end %>
